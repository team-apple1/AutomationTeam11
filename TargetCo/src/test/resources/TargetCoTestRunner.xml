<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">

<suite name="Target Automation Script " parallel="false">

    <parameter name="useCloudEnv" value="false"/>
    <parameter name="cloudEnvName" value="browserstack"/>
    <parameter name="os" value="OS X"/>
    <parameter name="os_version" value="Sierra"/>
    <parameter name="browserName" value="chrome"/>
    <parameter name="browserVersion" value="30.0"/>
    <parameter name="url" value="https://www.target.com/"/>

    <test name = "Target Home">
        <classes>
            <class name="Home.HomePage"/>
            <class name="RedCard.Redcard"/>
            <class name="Stores.SearchStores"/>
            <class name="ResultsPage.Filter"/>
            <class name="RegistriesandList.RegistriesListPage"/>
            <class name="Products.SearchProducts"/>
            <class name="Categories.ClickonCategories"/>
            <class name="Account.Accountpage"/>
        </classes>
    </test>

</suite>